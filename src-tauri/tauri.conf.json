{
	
	"build": {
		"beforeDevCommand": "yarn js-dev",
		"beforeBuildCommand": "yarn js-build",
		"frontendDist": "../dist",
		"devUrl": "http://localhost:1420"
	},
	
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/icon.png",
			"icons/icon.ico"
		]
	},
	
	"productName": "ann-tool-box",
	"version": "0.4.0",
	"identifier": "cc.sukazyo.ann-tool-box.app",
	
	"plugins": {},
	
	"app": {
		
		"security": {
			"csp": null
		},
		
		"windows": [
			{
				"title": "Ann Tool Box",
				"width": 950,
				"height": 560,
				"resizable": true,
				"decorations": false,
				"transparent": true
			}
		],
		"macOSPrivateApi": true
		
	}
}
